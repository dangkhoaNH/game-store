@model GameStore.Models.tblThuongHieu

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" type="text/css">

<h2 class="title-manage">Chỉnh sửa thương hiệu</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaTH)

    <div class="form-group" style="margin-left:21%">
        @Html.LabelFor(model => model.TenTH, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10" style="width:40%">
            @Html.EditorFor(model => model.TenTH, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenTH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-primary" style="margin-left:35.9%" />
        </div>
    </div>

</div>
}

<div style="position: absolute; margin-left: 47.9%; top: 48px; width: 7%; height: 12%;">
    <img src="~/Content/imagedetail/th1.jpg" style="width: 450%; right: 315px; position: absolute; top: 303%;" />
    <img src="~/Content/imagedetail/th2.jpg" style="width: 450%; right: -318%; position: absolute; top: 303%;" />
</div>

