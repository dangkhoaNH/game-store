@model GameStore.Models.tblSanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}
<div>
    <hr />
    <dd>
        <img src="@Url.Content("~/Content/Hinhsanpham/"+ Model.HinhAnh)" style="margin-left:60%;width:500px;height:auto;margin-top:-10px;border-radius:10px" />
    </dd>
    <dl class="dl-horizontal" style="margin-top:-30%;margin-left:-17px;width:61%;border-radius:10px">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GiaTien)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SoLuong)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayCapNhat)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:38%">
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Nhà cung cấp:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNCC)
        </dd>

        <dt>
            Thương hiệu:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaTH)
        </dd>

        <dt>
            Loại sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

    </dl>
    <div class="delete-image">
        <img src="~/Content/images/delete.gif" style="width:24%;margin-left:214px" />
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color" style="margin-top: 0;">
            <input type="submit" value="Xóa sản phẩm" class="btn btn-danger text-white" style="margin-left:44%" /> |
            <a class="btn btn-primary text-white" href="@Url.Action("Index","Product")">Trở về</a>
        </div>
    }
</div>

