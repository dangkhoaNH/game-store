@using GameStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<GameStore.Models.tblSanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" type="text/css">

<h2 class="title-manage">Quản lý sản phẩm</h2>

<table class="table table-striped">
    <tr>
        <th class="text-center">Tên sản phẩm</th>
        <th class="text-center">Giá bán</th>
        <th class="text-center">Số lượng</th>
        <th class="text-center">Ngày cập nhật</th>
        <th class="text-center">Hình ảnh</th>
        <th class="text-center">Mô tả</th>
        <th class="text-center">Nhà cung cấp</th>
        <th class="text-center">Thương hiệu</th>
        <th class="text-center">Loại</th>
        <th class="text-center">Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayCapNhat)
            </td>
            <td style="text-align: center">
                <img class="product__panel-img" src="@Url.Content("~/Content/Hinhsanpham/"+ item.HinhAnh)" style="width:70%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblNhaCungCap.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblThuongHieu.TenTH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tblLoaiSanPham.TenLoai)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }, new { @class = "btn btn-primary space" })
                @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaSP }, new { @class = "btn btn-info space" })
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

<div class="pagination-custom">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>



