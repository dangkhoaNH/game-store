@model IEnumerable<GameStore.Models.tblChiTietDonHang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MyLayout.cshtml";
}

<link href="~/Areas/Admin/Content/css/style.css" rel="stylesheet" type="text/css">

<h2 class="title-manage">Quản lý chi tiết đơn hàng</h2>

<table class="table table-striped">
    <tr>
        <th>Mã Đơn Hàng</th>
        <th>Mã Sản Phẩm</th>
        <th>Mã Khách Hàng</th>
        <th>Số Lượng</th>
        <th>Đơn Giá</th>
        <th>Chức năng</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MaDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DonGia)
            </td>
            <td>
                @Html.ActionLink("Xóa", "Delete", new { id = item.MaDH })
            </td>
        </tr>
    }

</table>


